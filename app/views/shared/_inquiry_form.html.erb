<div class="columns small-12 medium-4 form-style">

<%= form_tag('welcome/form_route', remote: true, class: 'form') do %>
<h3 class="h-3">Contact Us</h3>
  <%= text_field_tag 'name',nil, placeholder: '  jon doe', required: 'true' %>
  <%= email_field_tag 'email',nil, placeholder: '  me@gmail.com', required: 'true'%>
  <%= text_field_tag 'subject',nil, placeholder: '  Subject', required: 'true'%>
  <%= text_area_tag 'body', nil, rows: 10, cols: 25,placeholder: '  Message', required: 'true' %>
  <%= submit_tag("Send") %>
<% end %>
</div>



